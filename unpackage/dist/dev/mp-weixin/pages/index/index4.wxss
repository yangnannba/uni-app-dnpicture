.zhuanti {
  height: calc(100vh - 56px);
}
.swiper {
  width: 100%;
  height: 333rpx;
}
.swiper image {
    width: 100%;
    height: 333rpx;
}
.album {
  padding: 20rpx 20rpx 0;
}
.album-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 18rpx;
  padding-bottom: 18rpx;
  border-bottom: 2rpx solid #C8C7CC;
}
.album-item:nth-last-child(1) {
    border-bottom: 0rpx solid #C8C7CC;
    margin-bottom: 0;
}
.album-item image {
    width: 220rpx;
    height: 180rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    margin-right: 16rpx;
}
.album-item .info {
    overflow: hidden;
    position: relative;
}
.album-item .info .name {
      font-size: 34rpx;
      margin-bottom: 0.4rem;
}
.album-item .info .desc {
      font-size: 28rpx;
      color: #808080;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
}
.album-item .info .guanzhu {
      color: #4CD964;
      position: absolute;
      bottom: 0;
      right: 0;
      font-size: 30rpx;
      border: 1rpx solid #4CD964;
      border-radius: 4rpx;
      padding: 8rpx 16rpx;
}

